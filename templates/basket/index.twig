<div class="container-fluid">
    <div class="px-lg-5">
        <!-- For demo purpose -->
        <div class="row py-3">
            <div class="col-lg-12 mx-auto">
                <div class="text-white p-2 shadow-sm rounded banner text-center">
                    <h1 class="display-6">Корзина</h1>
                </div>
            </div>
        </div>
        <!-- End -->
        {% if basket == false %}
            Корзина пустая
        {% endif %}
        <div class="row">
            {% for product in basket %}
                <?= product ?>
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4 basket-item" data-id="{{ product.basket_id }}">
                    <div class="bg-white rounded shadow-sm"><a href="/product/card/?id={{ product.prod_id }}" class="product-card-link"><img src="../../img/{{ product.image }}" alt="" class="img-fluid card-img-top">
                            <div class="pt-4 pl-4 pr-4 pb-2">
                                <h5 class="text-dark">{{ product.name }}</h5>
                                <p class="small text-muted mb-0"><?=$product['description']?></p>
                                <div class="d-flex align-items-center justify-content-between rounded-pill bg-info px-3 py-2 mt-2">
                                    <p class="mb-0 mx-auto"><span class="font-weight-bold" style="color: white;">Цена: {{ product.price }} руб.</span></p>
                                </div>
                            </div>
                        </a>
                        <div class="d-flex justify-content-center">
                            <button data-id="{{ product.basket_id }}"
                               style="padding: 5px 5px;
                               background-color: red;
                               margin: 0 1.5em 1em 1.5em;
                               width: 100%;
                               text-align: center;
                               color: white;
                                border: none; " class="rounded-pill delete-from-basket"
                            >Удалить</button>
                        </div>
                        <!--                    <div class="pb-4 pr-4 pl-4">-->
                        <!--                        <button class="btn rounded-pill btn-outline-info btn-block">Купить</button>-->
                        <!--                    </div>-->
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if basket != false %}
            <p>Общая сумма: {{ summ }} руб.</p>
            <hr>
            <form action="/order/add" method="post" class="col-6">
                <div>Оформление заказа</div><br>
                <div class="mb-3">
                    <label for="name" class="form-label">Имя</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Телефон</label>
                    <input type="text" class="form-control" id="phone" name="phone">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Оформить заказ</button>
            </form>
        {% endif %}
    </div>
</div>




<script>
    let buttons = document.querySelectorAll('.delete-from-basket');
    buttons.forEach((elem)=>{
        elem.addEventListener('click', ()=>{
            let id = elem.getAttribute('data-id');
            (
                async () => {
                    const response = await fetch('/basket/delete/?id=' + id);
                    const anwser = await response.json();
                    document.getElementById('count').innerText = anwser.count;
                    let allBasketElements = document.querySelectorAll('.basket-item');
                    allBasketElements.forEach((elem) => {
                        if(id === elem.getAttribute('data-id')){
                            return elem.parentNode.removeChild(elem);
                        }
                    })
                }
            )();
        })
    });
</script>