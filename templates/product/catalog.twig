{% for product in catalog %}
    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
        <div class="bg-white rounded shadow-sm"><a href="/product/card/?id={{ product.id }}" class="product-card-link"><img src="../../img/{{ product.image }}" alt="" class="img-fluid card-img-top">
                <div class="pt-4 pl-4 pr-4 pb-2">
                    <h5 class="text-dark">{{ product.name }}</h5>
                    <p class="small text-muted mb-0"><?=$product['description']?></p>
                    <div class="d-flex align-items-center justify-content-between rounded-pill bg-info px-3 py-2 mt-2">
